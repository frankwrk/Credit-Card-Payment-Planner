{
  "name": "@ccpp/api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "migrate": "node scripts/run-migrations.mjs",
    "migrate:status": "node scripts/run-migrations.mjs --status",
    "seed:demo": "node scripts/seed-demo.mjs",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "pnpm exec vitest run --passWithNoTests",
    "test:watch": "pnpm exec vitest",
    "test:coverage": "pnpm exec vitest run --coverage --passWithNoTests"
  },
  "dependencies": {
    "@ccpp/shared": "workspace:*",
    "@ccpp/solver": "workspace:*",
    "@clerk/backend": "^1.20.0",
    "@hono/node-server": "^1.12.0",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.31.1",
    "hono": "^4.6.0",
    "postgres": "^3.4.4",
    "svix": "^1.31.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@vitest/coverage-v8": "^2.1.0",
    "tsx": "^4.19.0",
    "typescript": "^5.6.0",
    "vitest": "^2.1.0"
  }
}
